<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.thoughtworks.missedcallreminder"
      android:versionCode="1"
      android:versionName="1.0">
<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
<uses-permission android:name="android.permission.VIBRATE"></uses-permission>


    <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
        <service android:enabled="true" android:name="ReminderService" android:label="Missed call reminder">
            <intent-filter>
                <action android:name="com.thoughtworks.missedcallreminder.ReminderService"></action>
            </intent-filter>
        </service>
        <receiver android:name="ReminderBootReciever" android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
                <category android:name="android.intent.category.HOME"></category>
            </intent-filter>
        </receiver>
        <activity android:name="ReminderStartActivity" android:enabled="true">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"></category>
                <action android:name="android.intent.action.MAIN"></action>
            </intent-filter>
        </activity>
    </application>
</manifest>